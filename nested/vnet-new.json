{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"nsgName": {
			"type": "string",
			"defaultValue": "nsg-default1"
		},
		"virtualNetworkName": {
			"type": "string",
			"defaultValue": "vnet",
			"metadata": {
				"description": "VNET name"
			}
		},
		"virtualNetworkAddressPrefix": {
			"type": "string",
			"defaultValue": "10.0.0.0/16",
			"metadata": {
				"description": "CIDR for vnet"
			}
		},
		"mgmtSubnetName": {
			"type": "string",
			"defaultValue": "Mgmt",
			"metadata": {
				"description": "Subnet for Management"
			}
		},
		"untrustSubnetName": {
			"type": "string",
			"metadata": {
				"description": "Subnet for Untrust"
			}
		},
		"trustSubnetName": {
			"type": "string",
			"metadata": {
				"description": "Subnet for Trust"
			}
		},
		"devSubnetName": {
			"type": "string",
			"metadata": {
				"description": "Subnet for Dev"
			}
		},
		"loadBalancerIP": {
			"type": "string",
			"metadata": {
				"description": "Egress LoadBalancer IP"
			}
		},
		"mgmtSubnetPrefix": {
			"type": "string",
			"metadata": {
				"description": "Mgmt subnet CIDR"
			}
		},
		"untrustSubnetPrefix": {
			"type": "string",
			"metadata": {
				"description": "Untrust subnet CIDR"
			}
		},
		"trustSubnetPrefix": {
			"type": "string",
			"metadata": {
				"description": "Trust subnet CIDR"
			}
		},
		"devSubnetPrefix": {
			"type": "string",
			"metadata": {
				"description": "Dev subnet CIDR"
			}
		}
		},
	"variables": {
		"location": "[resourceGroup().location]",
		"rgname": "[resourceGroup().id]",
		"virtualNetworkName": "[parameters('virtualNetworkName')]",
		"vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('virtualNetworkName'))]",
		"mgmtSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('mgmtSubnetName'))]",
		"untrustSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('untrustSubnetName'))]",
		"trustSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('trustSubnetName'))]"
	},
	"resources": [
		{
			"type": "Microsoft.Network/routeTables",
			"name": "RT-Dev",
			"apiVersion": "2016-03-30",
			"location": "[resourceGroup().location]",
			"properties": {
				"routes": [
					{
						"name": "Devroute-Default",
						"properties": {
							"addressPrefix": "0.0.0.0/0",
							"nextHopType": "VirtualAppliance",
							"nextHopIpAddress": "[parameters('loadBalancerIP')]"
						}
					}
				]
			}
		},
		{
            "apiVersion": "2016-06-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
					"addressPrefixes":"[parameters('virtualNetworkAddressPrefix')]"           
                },
                "subnets": [
					{
						"name": "[parameters('mgmtSubnetName')]",
						"properties": {
							"addressPrefix": "[parameters('mgmtSubnetPrefix')]",
							"networkSecurityGroup": {
								"id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('nsgName'), '-mgmt'))]"
							}
						}
					},
					{
						"name": "[parameters('untrustSubnetName')]",
						"properties": {
							"addressPrefix": "[parameters('untrustSubnetPrefix')]"
						}
					},
					{
						"name": "[parameters('trustSubnetName')]",
						"properties": {
							"addressPrefix": "[parameters('trustSubnetPrefix')]",
							"networkSecurityGroup": {
								"id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('nsgName'), '-trust'))]"
							}
						}
					},
					{
						"name": "[parameters('devSubnetName')]",
						"properties": {
							"addressPrefix": "[parameters('devSubnetPrefix')]",
							"networkSecurityGroup": {
								"id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('nsgName'), '-trust'))]"
							}
						}
					}
				]
			},
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', 'RT-Dev')]"
            ]
        }

	],
	"outputs": {
		"virtualNetworkName": {
			"value": "[variables('virtualNetworkName')]",
			"type": "string"
		}
	}
}